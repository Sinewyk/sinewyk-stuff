{
  "compilerOptions": {
    "noEmit": true, // leave it to babel

    "strict": true, // if we are going types, be strict

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node", // classic if fucked up

    "isolatedModules": true // Warn if potential break related to babel unhandled cases
  }
}
